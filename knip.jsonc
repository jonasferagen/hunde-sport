{
  "$schema": "https://unpkg.com/knip@latest/schema.json",
  "project": [
    "index.{ts,tsx}",
    "app/**/*.{ts,tsx}"
  ],
  "ignore": [
    "android/**",
    "ios/**",
    ".expo/**",
    "dist/**",
    "build/**",
    "coverage/**",
    "node_modules/**",
    "scripts/**"
  ],
  "ignoreDependencies": [
    // Expo & RN modules are often loaded natively/babel
    "expo*",
    "react-native*",
    "@tamagui/*",
    "metro-minify-terser",
    "burnt",
  ],
}