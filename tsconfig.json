{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "Bundler",
    "target": "ES2020",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "types": [
      "react",
      "react-native",
      "expo"
    ]
  },
  "include": [
    "app",
    "components",
    "contexts",
    "hooks",
    "lib",
    "screens",
    "tamagui",
    "types",
    "index.ts",
    "index.tsx",
    "App.tsx",
    "expo-env.d.ts",
    ".expo/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "android",
    "ios",
    ".expo",
    "build",
    "dist",
    "coverage"
  ]
}
