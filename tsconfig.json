{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "Bundler",
    "target": "ES2024",
    "lib": [
      "ES2024"
    ],
    "jsx": "react-jsx",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "verbatimModuleSyntax": true, // keeps imports clean & tree-shakeable
    "noUncheckedIndexedAccess": true, // catches many subtle runtime errors
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "types": [
      "react",
      "react-native",
      "expo",
      "jest"
    ]
  },
  "include": [
    "src",
    "index.ts",
    "expo-env.d.ts",
    ".expo/types/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "android",
    "ios",
    ".expo",
    "build",
    "dist",
    "coverage"
  ]
}