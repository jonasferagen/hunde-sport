{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "Bundler",
    "target": "ES2020",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "types": ["react", "react-native", "expo", "jest"]
  },
  "include": [
    "app",
    "components",
    "contexts",
    "hooks",
    "lib",
    "screens",
    "tamagui",
    "types",
    "index.ts",
    "index.tsx",
    "App.tsx",
    "expo-env.d.ts",
    ".expo/types/**/*.ts",
    "tests",
    "domain/product/helpers/ProductVariationCollection.ts",
    "domain/product/Old/ProductAttributeHelper.ts",
    "domain/product/helpers/selectionStore.ts",
    "stores/useProductVariationStore.ts"
  ],
  "exclude": [
    "node_modules",
    "android",
    "ios",
    ".expo",
    "build",
    "dist",
    "coverage"
  ]
}
