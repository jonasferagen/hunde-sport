{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "Bundler",
    "target": "ES2020",
    "jsx": "react-jsx",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "verbatimModuleSyntax": true, // keeps imports clean & tree-shakeable
    "noUncheckedIndexedAccess": true, // catches many subtle runtime errors
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@domain/*": ["domain/*"],
      "@cart/*": ["domain/cart/*"],
      "@product/*": ["domain/product/*"]
    },
    "types": ["react", "react-native", "expo", "jest"]
  },
  "include": [
    "app",
    "components",
    "contexts",
    "hooks",
    "lib",
    "screens",
    "tamagui",
    "types",
    "index.ts",
    "index.tsx",
    "expo-env.d.ts",
    ".expo/types/**/*.ts",
    "tests"
  ],
  "exclude": [
    "node_modules",
    "android",
    "ios",
    ".expo",
    "build",
    "dist",
    "coverage"
  ]
}
